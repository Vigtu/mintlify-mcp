{
  "name": "mintlify-mcp",
  "version": "0.2.0",
  "description": "MCP server to chat with any Mintlify-powered documentation via Claude Code",
  "main": "src/index.ts",
  "type": "module",
  "bin": {
    "mintlify-mcp": "./src/index.ts"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit",
    "lint": "biome check --write --unsafe src tests && cd python && uv run ruff check --fix . && uv run ruff format ."
  },
  "keywords": [
    "mcp",
    "mintlify",
    "claude",
    "claude-code",
    "documentation",
    "ai",
    "assistant",
    "model-context-protocol",
    "anthropic",
    "bun"
  ],
  "author": "Vigtu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vigtu/mintlify-mcp.git"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "fast-xml-parser": "^5.3.3",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "typescript": "^5.3.0"
  }
}
