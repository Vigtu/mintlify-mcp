{
  "name": "docmole",
  "version": "0.3.0",
  "description": "AI documentation assistant that digs through any docs site - MCP server for Claude Code",
  "main": "src/index.ts",
  "type": "module",
  "bin": {
    "docmole": "./src/index.ts"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit",
    "lint": "biome check --write --unsafe src tests && cd python && uv run ruff check --fix . && uv run ruff format ."
  },
  "keywords": [
    "mcp",
    "documentation",
    "docs",
    "rag",
    "claude",
    "claude-code",
    "ai",
    "assistant",
    "model-context-protocol",
    "anthropic",
    "bun",
    "lancedb"
  ],
  "author": "Vigtu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vigtu/docmole.git"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.12",
    "@lancedb/lancedb": "^0.23.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ai": "^6.0.39",
    "fast-xml-parser": "^5.3.3",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "latest",
    "typescript": "^5.3.0"
  }
}
